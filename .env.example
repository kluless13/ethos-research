# Ethos Research Configuration
# Copy this file to .env and fill in your values

# ===================
# ETHOS API CONFIG
# ===================

ETHOS_API_BASE_URL=https://api.ethos.network/api/v2
ETHOS_CLIENT_NAME=onetrillionx-research

# Optional: Auth token (not needed for public endpoints)
ETHOS_AUTH_TOKEN=

# ===================
# TWITTER API CONFIG
# ===================

# Twitter API v2 credentials
TWITTER_BEARER_TOKEN=

# For user context endpoints (optional)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ===================
# DATABASE CONFIG
# ===================

DATABASE_PATH=data/ethos_twitter_research.db

# ===================
# RATE LIMITING
# ===================

# Delay between Ethos API requests (seconds)
ETHOS_RATE_LIMIT=0.5

# Delay between Twitter API requests (seconds)
# Twitter has stricter limits - be conservative
TWITTER_RATE_LIMIT=1.0

# Max retries for failed requests
MAX_RETRIES=3

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# ===================
# DATA COLLECTION
# ===================

# Batch size for bulk operations
BATCH_SIZE=100

# How far back to fetch Twitter interactions (days)
TWITTER_LOOKBACK_DAYS=90

# ===================
# LOGGING
# ===================

LOG_LEVEL=INFO
LOG_FILE=logs/research.log
